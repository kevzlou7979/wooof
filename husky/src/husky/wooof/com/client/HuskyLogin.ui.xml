<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='image' type='husky.wooof.com.client.images.HuskyImages' />
	<ui:style>
		.panel{
			text-align: center;
		}
		.logo{
			max-width: 100%;
			height: auto;
			margin: auto;
			margin-top: 5%;
			display: block;
		}
		.lblSiteName{
			margin-top: 5%;
			font-size: 4em;
			color: #4086fa;
			font-weight: bold;
		}
		.lblSiteSlogan{
			color: #4086fa;
			font-size: 1.2em;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panel}">
		<g:Image resource="{image.husky_logo}" addStyleNames="{style.logo}"/>
		<g:Label addStyleNames="{style.lblSiteName}" text="HUSKY"/>
		<g:Label addStyleNames="{style.lblSiteSlogan}" text="Learning is Everywhere"/>
	</g:HTMLPanel>
</ui:UiBinder> 