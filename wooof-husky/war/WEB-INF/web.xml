<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- Servlets -->

	<servlet>
		<servlet-name>accountServlet</servlet-name>
		<servlet-class>husky.wooof.com.server.UserAccountServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>accountServlet</servlet-name>
		<url-pattern>/husky/account</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>cardServlet</servlet-name>
		<servlet-class>husky.wooof.com.server.CardServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>cardServlet</servlet-name>
		<url-pattern>/husky/card</url-pattern>
	</servlet-mapping>
	
	<!-- Upload Servlet -->
	<servlet>
	    <servlet-name>formImageUploader</servlet-name>
	    <servlet-class>husky.wooof.com.server.HuskyUploadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>formImageUploader</servlet-name>
	    <url-pattern>/upload</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>Husky.html</welcome-file>
	</welcome-file-list>

</web-app>
