<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:h="urn:import:husky.wooof.com.client.ui">
	<ui:with field='res' type='husky.wooof.com.client.resources.HuskyResources' />
	<ui:style>
		.panel{
			text-align: center;
		}
		.logo{
			max-width: 100%;
			height: auto;
			margin: auto;
			margin-top: 5%;
			display: block;
		}
		
		.lblSiteName{
			margin-top: 5%;
			font-size: 4em;
			color: #4086fa;
			font-weight: bold;
		}
		.lblSiteSlogan{
			color: #4086fa;
			font-size: 1.2em;
			
		}
		.formPanel{
			width: 300px;
			margin: auto;
			margin-top: 50px;
			position: relative;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panel}">
		 <g:Image ui:field="imgLogo" resource="{res.husky_logo}" addStyleNames="{style.logo}"/> 
		<!-- <g:Image ui:field="imgLogo"  addStyleNames="{style.logo}"/> -->
		
	<!-- 	<g:Label addStyleNames="{style.lblSiteName}" text="Husky"/>
		<g:Label addStyleNames="{style.lblSiteSlogan}" text="Learning is Everywhere"/> -->
		
		<g:HTMLPanel ui:field="formPanel" addStyleNames="{style.formPanel}">
			<g:HTMLPanel ui:field="messagePanel" />
		
			<g:HTMLPanel ui:field="signInPanel" >
				<h:HuskyTextBox placeholder="Email" ui:field="txtEmail"/>
				<h:HuskyPasswordBox placeholder="Password" ui:field="txtPassword"/>
				<h:HuskyButton ui:field="btnSignIn" text="Sign In"/> 
				<g:Label text="Sign Up" ui:field="signUpNav" addStyleNames="{res.huskycss.huskyLink}"/>
			</g:HTMLPanel>
			
			<g:HTMLPanel ui:field="signUpPanel" >
				<h:HuskyTextBox placeholder="FirstName" ui:field="txtRFirstName"/>
				<h:HuskyTextBox placeholder="LastName" ui:field="txtRLastName"/>
				<h:HuskyListBox ui:field="lstGender">
				    <item>Male</item>
				    <item>Female</item>
				</h:HuskyListBox>
				<h:HuskyTextBox placeholder="Email" ui:field="txtREmail"/>
				<h:HuskyPasswordBox placeholder="Password" ui:field="txtRPassword"/>
				<h:HuskyPasswordBox placeholder="Confirm Password" ui:field="txtRConPassword"/>
				<h:HuskyButton ui:field="btnSignUp" text="Sign Up"/> 
				<g:Label text="Sign In" ui:field="signInNav" addStyleNames="{res.huskycss.huskyLink}" />
			</g:HTMLPanel>
		</g:HTMLPanel>
		
		
	</g:HTMLPanel>
</ui:UiBinder> 