<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:h="urn:import:husky.wooof.com.client.ui">
	<ui:with field='res' type='husky.wooof.com.client.resources.HuskyResources' />
	<ui:style>
		.panel{
			text-align: center;
		}
		.logo{
			width: 200px;
			max-width: 100%;
			height: auto;
			margin: auto;
			margin-top: 5%;
			display: block;
		}
		
		.lblSiteName{
			margin-top: 5%;
			font-size: 4em;
			color: #4086fa;
			font-weight: bold;
			text-shadow: 2px 1px 0px rgb(119, 119, 119);
		}
		.lblSiteSlogan{
			color: #4086fa;
			font-size: 1.2em;
			text-shadow: 2px 1px 0px rgb(119, 119, 119);
		}
		.formPanel{
			width: 300px;
			margin: auto;
			margin-top: 50px;
			text-align: center;
			position: relative;
		}
		.maintenanceTitle{
			color: #fff;
			font-size: 4em;
		}
		.maintenanceDesc{
			color: #fff;
			font-size: 2em;
		}
		.maintenancePanel{
			text-align: center;
		}
		.signUp{
			color: rgb(255, 255, 255);
			margin-top: 10px;
			font-size: 1.2em;
			cursor: pointer;
		}
		.header{
			text-align: center;
		}
		.txtCustom{
			margin-top: -2px;
		}
		.imgAuth{
			transform: scale(0.8);
			-moz-transform: scale(0.8);
			-webkit-transform: scale(0.8);
			cursor: pointer;
			transition: 0.5s all;
			-webkit-transition: 0.5s all;
			-moz-transition: 0.5s all;
		}
		.imgAuth:hover{
			transform: scale(0.9);
			-moz-transform: scale(0.9);
			-webkit-transform: scale(0.9);
		}
	</ui:style>
	<g:HTMLPanel ui:field="loginPanel" addStyleNames="{res.huskycss.loginPanel}">

		<g:HTMLPanel addStyleNames="{style.header}">
			<g:Image ui:field="imgLogo" resource="{res.husky_logo}" addStyleNames="{style.logo} {res.huskymobilecss.loginLogo}"/>
			<g:Label ui:field="lblTitle" text="Husky" addStyleNames="{style.maintenanceTitle}"/>
		</g:HTMLPanel>
		
		<g:HTMLPanel ui:field="maintenancePanel" addStyleNames="{style.maintenancePanel}">
			<g:Label text="Under Maintenance.." addStyleNames="{style.maintenanceDesc} {res.huskycss.inline}"/>
			<g:Label ui:field="lblSecret" text="." addStyleNames="{style.maintenanceDesc} {res.huskycss.inline}"/>
		</g:HTMLPanel>
		
		
		<g:HTMLPanel ui:field="formPanel" addStyleNames="{style.formPanel}">
			<g:HTMLPanel ui:field="messagePanel" />
		
			<g:HTMLPanel ui:field="signInPanel" >
				<h:HuskyTextBox placeholder="Email" ui:field="txtEmail" addStyleNames="{style.txtCustom}"/>
				<h:HuskyPasswordBox placeholder="Password" ui:field="txtPassword" addStyleNames="{style.txtCustom}"/>
				<h:HuskyButton ui:field="btnSignIn" text="Sign In"/> 
				
				<g:HTMLPanel>
					<g:Label text="Sign In with:"  addStyleNames="{style.signUp}"/>
					<g:Image ui:field="btnGooglePlusAuth" resource="{res.ic_google_plus}" addStyleNames="{res.huskycss.inline} {style.imgAuth}"/>
					<g:Image ui:field="btnFacebookAuth" resource="{res.ic_facebook}" addStyleNames="{res.huskycss.inline} {style.imgAuth}"/>
				</g:HTMLPanel>
				
				<g:Label text="Sign Up" ui:field="signUpNav" addStyleNames="{style.signUp}"/>
			</g:HTMLPanel>
			
			<g:HTMLPanel ui:field="signUpPanel" >
				<h:HuskyTextBox placeholder="FirstName" ui:field="txtRFirstName" addStyleNames="{style.txtCustom}"/>
				<h:HuskyTextBox placeholder="LastName" ui:field="txtRLastName" addStyleNames="{style.txtCustom}"/>
				<h:HuskyListBox ui:field="lstGender" addStyleNames="{style.txtCustom}">
				    <item>Male</item>
				    <item>Female</item>
				</h:HuskyListBox>
				<h:HuskyTextBox placeholder="Email" ui:field="txtREmail" addStyleNames="{style.txtCustom}"/>
				<h:HuskyPasswordBox placeholder="Password" ui:field="txtRPassword" addStyleNames="{style.txtCustom}"/>
				<h:HuskyPasswordBox placeholder="Confirm Password" ui:field="txtRConPassword" addStyleNames="{style.txtCustom}"/>
				<h:HuskyButton ui:field="btnSignUp" text="Sign Up"/> 
				<g:Label text="Sign In" ui:field="signInNav" addStyleNames="{res.huskycss.huskyLink}" />
			</g:HTMLPanel>
		</g:HTMLPanel>
		
		
	</g:HTMLPanel>
</ui:UiBinder> 