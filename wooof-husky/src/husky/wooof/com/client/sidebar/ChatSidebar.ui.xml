<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:h="urn:import:husky.wooof.com.client.ui">
	<ui:style>
		.txtChatMessage{
			bottom: 0px;
			position: fixed;
			min-height: 0px;
			width: 280px;
		}
		.panel{
			height: 100%;
			padding: 10px;
			padding-right: 0px;
		}
		.chatMessagePanel{
			margin-top: 50px;
			margin-left: -40px;
			height: 80%;
			overflow: auto;
			
		}
		.chatMessagePanel > div{
			position: initial !important; 
		}
  </ui:style>
	<g:HTMLPanel addStyleNames="{style.panel}">
		<g:ScrollPanel ui:field="chatScrollPanel" addStyleNames="{style.chatMessagePanel}">
			<g:HTMLPanel ui:field="chatMessagePanel" >
		   		<g:Label ui:field="txtChatStatus" text="Typing"/>
			</g:HTMLPanel>
		</g:ScrollPanel>
		<h:HuskyTextArea ui:field="txtChatMessage" placeholder="Enter your message" addStyleNames="{style.txtChatMessage}"/>
	</g:HTMLPanel>
</ui:UiBinder> 