<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:h="urn:import:husky.wooof.com.client.ui">
	<ui:with field='res' type='husky.wooof.com.client.resources.HuskyResources' />
	<ui:style>
		.chooseTypePanel{
			padding-top: 10px;
			padding-bottom: 10px;
			margin-bottom: 10px;
			border-bottom: #e9e9e9;
			border-color: #4086fa;
		}
	</ui:style>
	<g:HTMLPanel>
		<h:HuskyTitle title="Lesson" imageSize="70px" description="Provide lesson information		 below" resource="{res.ic_lesson}"/>
		<h:HuskyTextBox placeholder="Lesson Name" ui:field="txtCardName"/>
		<h:HuskyTextArea placeholder="Lesson Description" ui:field="txtCardDescription"/>
			
		<g:HTMLPanel ui:field="chooseTypePanel" addStyleNames="{style.chooseTypePanel}">
		    <h:LessonType ui:field="typeYoutube" resource="{res.ic_lesson_youtube}" text="Provide a youtube link for your lesson video material"/>
			<h:LessonType ui:field="typeImage" resource="{res.ic_lesson_image}" text="Upload an image for your lesson material"/>
		</g:HTMLPanel>
		
		
		<h:HuskyButton ui:field="btnCreateLesson" text="Create Lesson"/>
	</g:HTMLPanel>
</ui:UiBinder> 