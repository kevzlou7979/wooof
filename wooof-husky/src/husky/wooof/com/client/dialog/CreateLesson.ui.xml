<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:h="urn:import:husky.wooof.com.client.ui">
	<ui:with field='res' type='husky.wooof.com.client.resources.HuskyResources' />
	<ui:style>
		.chooseTypePanel{
			padding-top: 10px;
			padding-bottom: 10px;
			margin-bottom: 10px;
			border-bottom: #e9e9e9;
			border-color: #4086fa;
		}
		.btnYoutubePreview{
			width: 20%;
			font-size: 0.9em;
			padding: 15px;
			margin-left: -10px;
		}
		.txtYoutubeLink{
			width: 79%;
		}
		.lessonFieldPanel{
			padding: 10px 0px 10px 0px;
		}
		.youtubeVideoPanel{
			margin: 20px 0px 20px 0px;
			height: 300px;
		}
		.stepPanel{
			text-align: center;
			width: 60%;
			margin: auto;
			margin-top: 20px;
			margin-bottom: 50px;
		}
		.firstStep{
			float: left;
		}
		.lastStep{
			float: right;
		}
		.typePanel{
			text-align: center;
			padding: 20px;
			background: #F4F4F4;
		}
		.buttonPanel{
			margin-top: 20px;
			border-top: 1px solid #E9E9E9;
		}
	</ui:style>
	<g:HTMLPanel ui:field="panel">
	
		<g:HTMLPanel ui:field="stepPanel" addStyleNames="{style.stepPanel}">
			<g:Label ui:field="lblStep1" text="1" addStyleNames="{res.huskycss.huskyStep} {style.firstStep}"/>
			<g:Label ui:field="lblStep2" text="2" addStyleNames="{res.huskycss.huskyStep}"/>
			<g:Label ui:field="lblStep3" text="3" addStyleNames="{res.huskycss.huskyStep} {style.lastStep}"/>
		</g:HTMLPanel>
		
		<g:HTMLPanel ui:field="infoPanel">
			<h:HuskyTitle title="Lesson" imageSize="70px" description="Provide lesson information below" resource="{res.ic_lesson}"/>
			<g:HTMLPanel ui:field="messagePanel"/>
			<h:HuskyTextBox ui:field="txtLessonName" placeholder="Lesson Name"/>
			<h:HuskyTextArea ui:field="txtDescription" placeholder="Lesson Description"/>
			<h:HuskyButton ui:field="btnChooseType" text="Choose LessonType"/>
		</g:HTMLPanel>
			
		<g:HTMLPanel ui:field="chooseTypePanel" addStyleNames="{style.chooseTypePanel}">
			<h:HuskyTitle title="Lesson Type" imageSize="70px" description="Provide lesson information below" resource="{res.ic_lesson_type}"/>
		    
			<g:HTMLPanel addStyleNames="{style.typePanel}">
				<g:HTMLPanel ui:field="lessonFieldPanel" addStyleNames="{style.lessonFieldPanel}">
					<g:HTMLPanel ui:field="youtubePanel">
						<h:HuskyTextBox ui:field="txtYoutubeUrl" placeholder="Youtube URL" addStyleNames="{res.huskycss.inline} {style.txtYoutubeLink}"/>
						<h:HuskyButton text="Preview" ui:field="btnYoutubePreview" addStyleNames="{res.huskycss.inline} {style.btnYoutubePreview}"/>
						<h:YoutubeVideo ui:field="youtubeVideoPanel" addStyleNames="{style.youtubeVideoPanel}"/>
					</g:HTMLPanel>
					<g:HTMLPanel ui:field="imagePanel">
						<h:HuskyUploadArea ui:field="imageLessonPanel" />
					</g:HTMLPanel>
				</g:HTMLPanel>
				
				<g:HTMLPanel addStyleNames="{style.buttonPanel}">
					<h:LessonType text="Image" ui:field="typeImage" type="image" resource="{res.ic_lesson_type_image}" addStyleNames="{res.huskycss.inline}"/>
					<h:LessonType text="Youtube" ui:field="typeYoutube" type="youtube" resource="{res.ic_lesson_type_youtube}" addStyleNames="{res.huskycss.inline}"/>
					<h:LessonType text="Audio" ui:field="typeAudio" type="audio" resource="{res.ic_lesson_type_audio}" addStyleNames="{res.huskycss.inline}"/>
					<h:LessonType text="Place" ui:field="typePlace" type="place" resource="{res.ic_lesson_type_place}" addStyleNames="{res.huskycss.inline}"/>
					<h:LessonType text="Link" ui:field="typeLink" type="link" resource="{res.ic_lesson_type_link}" addStyleNames="{res.huskycss.inline}"/>
				</g:HTMLPanel>
			</g:HTMLPanel>
			
			<h:HuskyButton ui:field="btnAddMaterial" text="Add Material"/>
		</g:HTMLPanel>
		
		<g:HTMLPanel ui:field="lessonMaterialPanel" addStyleNames="{style.chooseTypePanel}">
			<h:HuskyTitle title="Lesson Material" imageSize="70px" description="Provide lesson information below" resource="{res.ic_lesson_material}"/>
		    <h:HuskyButton ui:field="btnCreateLesson" text="Create Lesson"/>
		</g:HTMLPanel>
		
		
		
		
	</g:HTMLPanel>
</ui:UiBinder> 