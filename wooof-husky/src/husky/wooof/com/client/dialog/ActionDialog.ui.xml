<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:h="urn:import:husky.wooof.com.client.ui">
	<ui:with field='res' type='husky.wooof.com.client.resources.HuskyResources' />
	<ui:style>
		.btnAction{
			display: inline-block;
			vertical-align: middle;
			width: 100px;
		}
		.lblTitle{
		
		}
		.header{
			background: #e46f61;
			padding: 20px;
		}
		.imgIcon{
			width: 10%;
			height: auto;
		}
		.lblTitle{
			color: #fff;
			font-size: 1.1em;
			width: 80%;
			text-align: left;
			padding-left: 1%;
		}
		.lblDesc{
			padding: 30px;
			font-size: 1.2em;
			text-align: center;
			color: #999;
		}
		.actionPanel{
			padding: 5px;
			background: #F7F7F7;
			text-align: right;
			font-size: 0.7em;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.header}">
			<g:Image ui:field="imgIcon" addStyleNames="{res.huskycss.inline} {style.imgIcon}"/>
	   	 	<g:Label ui:field="lblTitle" text="Title" addStyleNames="{res.huskycss.inline} {style.lblTitle}"/>
		</g:HTMLPanel>
	    <g:Label ui:field="lblDesc" text="Description" addStyleNames="{style.lblDesc}"/>
	    <g:HTMLPanel addStyleNames="{style.actionPanel}">
			<h:HuskyButton ui:field="btnCancel" text="Cancel" addStyleNames="{res.huskycss.huskyButtonWhite} {style.btnAction}"/>
			<h:HuskyButton ui:field="btnOk" text="Okay" addStyleNames="{style.btnAction}"/>
	    </g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 