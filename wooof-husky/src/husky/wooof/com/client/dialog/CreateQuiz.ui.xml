<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:h="urn:import:husky.wooof.com.client.ui">
	<ui:with field='res' type='husky.wooof.com.client.resources.HuskyResources' />
	<ui:style>
		.panel{
			height: 500px;
		}
		.leftPanel{
			width: 19%;
			height: 100%;
			background: #f9f9f9;
		}
		.rightPanel{
			width: 80%;
			height: 100%;
		}
		.quizMenu{
			padding: 10px 0px 10px 0px;
			cursor: pointer;
		}
		.quizMenu img{
			transform: scale(0.5);
			-webkit-transform: scale(0.5);
			-moz-transform: scale(0.5);
			transition: 0.4s all;
			-webkit-transition: 0.4s all;
			-moz-transition: 0.4s all;
		}
		.quizMenu:hover img{
			transform: scale(1);
			-webkit-transform: scale(1);
			-moz-transform: scale(1);
		}
		.title{
			font-size: 1.2em;
		}
		.desc{
			font-size: 0.9em;
		}
		.imgEdit{
			width: 15px;
			height: 15px;
			opacity: 0;
			padding-left: 20px;
			cursor: pointer;
		}
		.titlePanel:hover .imgEdit{
			opacity: 0.5;
		}
		.descriptionPanel:hover .imgEdit{
			opacity: 0.5;
		}
		.titleDescPanel{
			width: 100%;
			border-bottom: 1px solid #e9e9e9;
			padding-bottom: 10px;
			padding-left: 20px;
			color: #999;
		}
		.quizPanel{
			height: 100%;
			overflow-y: auto;
			overflow-x: hidden;
		}
		.btnActions{
			position: absolute;
			right: 10px;
			bottom: 10px;
		}
		.btnAction{
			width: 100px;
			font-size: 0.9em;
			float: right;
			margin-top: -5px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panel}">
		<h:HuskyTitle title="Quiz Maker" imageSize="70px" description="Provide lesson information below" withImage="false"/>
		<g:HTMLPanel addStyleNames="{style.leftPanel} {res.huskycss.inline}">
			<h:HuskyTitle ui:field="menuQuizMultiChoice" resource="{res.ic_quiz_multi_choice}" title="Multiple Choice" fontSize="1" color="3c8bca" addStyleNames="{style.quizMenu}"/>
			<h:HuskyTitle ui:field="menuQuizTrueFalse" resource="{res.ic_quiz_true_false}" title="True or False" fontSize="1" color="3c8bca" addStyleNames="{style.quizMenu}"/>
			<h:HuskyTitle ui:field="menuQuizDef" resource="{res.ic_quiz_fill}" title="Definition" fontSize="1" color="3c8bca" addStyleNames="{style.quizMenu}"/>
			<h:HuskyTitle ui:field="menuQuizMatching" resource="{res.ic_quiz_matching}" title="Matching Type" fontSize="1" color="3c8bca" addStyleNames="{style.quizMenu}"/>
			<h:HuskyTitle ui:field="menuQuizEssay" resource="{res.ic_quiz_essay}" title="Essay" fontSize="1" color="3c8bca" addStyleNames="{style.quizMenu}"/>
			<h:HuskyTitle ui:field="menuQuizCheckBox" resource="{res.ic_quiz_checkbox}" title="CheckBox" fontSize="1" color="3c8bca" addStyleNames="{style.quizMenu}"/>
		</g:HTMLPanel>	
		<g:HTMLPanel addStyleNames="{style.rightPanel} {res.huskycss.inline}">
			<g:HTMLPanel addStyleNames="{style.titleDescPanel}">
				<g:HTMLPanel addStyleNames="{style.titlePanel}">
					<g:HTMLPanel ui:field="titlePanel" addStyleNames="{style.title} {res.huskycss.inline}"/>
					<g:Image ui:field="imgEditTitle" title="Edit" resource="{res.ic_edit_2}" addStyleNames="{res.huskycss.transition} {style.imgEdit}" />
				</g:HTMLPanel>
				<g:HTMLPanel addStyleNames="{style.descriptionPanel}">
					<g:HTMLPanel ui:field="descriptionPanel" addStyleNames="{style.desc} {res.huskycss.inline}" />
					<g:Image ui:field="imgEditDescription" title="Edit" resource="{res.ic_edit_2}" addStyleNames="{res.huskycss.transition} {style.imgEdit}" />
				</g:HTMLPanel>
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="quizPanel" addStyleNames="{style.quizPanel}"/>
			<g:HTMLPanel addStyleNames="{style.btnActions}">
				<h:HuskyButton ui:field="btnSave" text="Save" addStyleNames="{style.btnAction}"/>
				<h:HuskyButton ui:field="btnCancel" text="Cancel" addStyleNames="{res.huskycss.huskyButtonWhite} {style.btnAction}"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 