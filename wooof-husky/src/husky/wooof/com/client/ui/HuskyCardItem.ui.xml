<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='res' type='husky.wooof.com.client.resources.HuskyResources' />
	<ui:style>
	@external .panelAfter;
	.panel{
		padding: 5px;
		border-radius: 5px;
		-webkit-border-radius: 5px;
		-moz-border-radius: 5px;
		border: 1px solid #e7e7e7;
		display: inlin-block;
		width: 250px;
		display: inline-block;
		vertical-align: top;
		margin: 5px;
		margin-top: 100px;
		transition: 0.5s all;
		-webkit-transition: 0.5s all;
		-moz-transition: 0.5s all;
		opacity: 0;
	}
	.panelAfter{
		margin-top: 0%;
		opacity: 1;
	}
	.cardImagePanel{
		background: #e9e9e9;
		height: 200px;
		text-align: center;
		position: relative;
	}
	.lblTitle{
		padding: 10px;
		font-size: 1.1em;
		font-family: Arial;
		width: 75%;	
		color: #585858;
		padding-bottom: 10px;
		cursor: pointer;	
	}
	.descriptionPanel{
		width: 100%;
		height: 100%;
		position: absolute;
		opacity: 0;
		top: 0;
		z-index: 998;
		background: rgba(64, 134, 250, 0.5);
		transition: 0.5s all;
		-webkit-transition: 0.5s all;
		-moz-transition: 0.5s all;
	}
	.cardImagePanel:hover .descriptionPanel{
		opacity: 1; 
	}
	.lblDescription{
		color: #fff;	
	}
	.footerPanel{
		padding-top: 10px;
	}
	</ui:style>
	<g:HTMLPanel ui:field="panel" addStyleNames="{style.panel}">
		<g:HTMLPanel ui:field="cardImagePanel" addStyleNames="{style.cardImagePanel}">
		    <g:Image ui:field="cardImage" resource="{res.ic_default_card}"/>
			<g:HTMLPanel addStyleNames="{style.descriptionPanel}">
			    <g:Label ui:field="lblDescription" addStyleNames="{style.lblDescription}"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="footerPanel" addStyleNames="{style.footerPanel}">
		    <g:Image resource="{res.ic_card}" addStyleNames="{res.huskycss.inline}"/>
		    <g:Label ui:field="lblCardName" addStyleNames="{res.huskycss.inline} {style.lblTitle}"/>
		    <g:Image resource="{res.ic_trips}" addStyleNames="{res.huskycss.inline}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 