<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='res' type='husky.wooof.com.client.resources.HuskyResources' />
	<ui:style>
	.imgTitle{
		width: 70px;
		height: 70px;
	}
	.panel{
		width: 40%;
		margin-right: 6%;
		padding-bottom: 10px;
	}
	.panel:hover{
		border-bottom: 3px solid #4086fa;
	}
	.lblDescription{
		color: #999;
	}
	</ui:style>
	<g:FocusPanel ui:field="focusPanel" addStyleNames="{style.panel} {res.huskycss.inline}">
		<g:HTMLPanel >
		    <g:Image ui:field="imgTitle" addStyleNames="{style.imgTitle}"/>
		    <g:Label ui:field="lblDescription" addStyleNames="{style.lblDescription}"/>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 