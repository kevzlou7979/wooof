<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='res'
		type='husky.wooof.com.client.resources.HuskyResources' />
	<ui:style>
		.uploadPanel{
			width: 100%;
			height: 200px;
			background: #f9f9f9;
			text-align: center;
			border: 1px solid #ececed;
		}
		.lblMedium{
			color: #cbdcf9;
			font-size: 1.2em;
		}
		.ic_image{
			margin-top: 15%;
		}
		
		.uploadField{
			width: 80%;
		}
		.uploadButton{
			width: 19%;
		}
		.uploadForm{
			padding: 5px 0px 0px 20px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel ui:field="uploadPanel" addStyleNames="{style.uploadPanel}">
			<g:Image ui:field="imgLogo" resource="{res.ic_image}" addStyleNames="{style.ic_image}"/>
			<g:Label ui:field="lblDescription" addStyleNames="{style.lblMedium}" />
		</g:HTMLPanel>
		<g:FormPanel ui:field="uploadForm" addStyleNames="{style.uploadForm}">
			<g:HTMLPanel>
				<g:FileUpload ui:field="uploadField" addStyleNames="{style.uploadField} {res.huskycss.inline}" />
				<g:Button ui:field="uploadButton" addStyleNames="{res.huskycss.inline} {style.uploadButton}" />
			</g:HTMLPanel>
		</g:FormPanel>
	</g:HTMLPanel>
</ui:UiBinder> 