<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='res' type='husky.wooof.com.client.resources.HuskyResources' />
	<ui:style>
		.panel{
			padding: 5px;
		}
		.icon{
			width: 15px;
			height: 15px;
			margin-left: 10px;
			opacity: 0;
			cursor: pointer;
		}
		.panel:hover .icon{
			opacity: 0.5;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panel}">
		<g:HTMLPanel addStyleNames="{res.huskycss.inline}">
			<g:RadioButton ui:field="rbItem" name="rbItem"/>
			<g:HTMLPanel ui:field="choicePanel" addStyleNames="{res.huskycss.inline}"/>
		</g:HTMLPanel>
		<g:Image ui:field="btnEditChoice" title="Edit" resource="{res.ic_edit_2}" addStyleNames="{res.huskycss.inline} {style.icon} {res.huskycss.transition}"/>
		<g:Image ui:field="btnDelete" title="Delete" resource="{res.ic_trash}" addStyleNames="{res.huskycss.inline} {style.icon} {res.huskycss.transition}"/>
	</g:HTMLPanel>
</ui:UiBinder> 