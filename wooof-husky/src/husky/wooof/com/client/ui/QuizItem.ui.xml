<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:h="urn:import:husky.wooof.com.client.ui">
	<ui:with field='res' type='husky.wooof.com.client.resources.HuskyResources' />
	<ui:style>
		.panel{
			background: #fff;
			width: 100%;
			padding: 10px;
			border: 1px solid #e9e9e9;
			border-radius: 5px;
			-webkit-border-radius: 5px;
			-moz-border-radius: 5px;
			margin-bottom: 20px;
		}
		.circle{
			font-size: 0.4em;
		}
		.left{
			width: 80px;
			height: 80px;
			position: relative;
		}
		.leftItem{
			position: absolute;
			z-index: 999;
			width: 60px;
			height: 60px;
			text-align: center;
			background: #fff;
			left: 10px;
			top: 10px;
			border-radius: 100%;
			-moz-border-radius: 100%;
			-webkit-border-radius: 100%;
			overflow: hidden;
			color: #4086fa;
		}
		.txtPoints{
			width: 100%;
			padding: 0px;
			border: none;
			font-size: 2em;
			text-align: center;
			color: #4086fa;
		}
		.txtPoints:hover{
			background: #e9e9e9;
		}
		.rightPanel{
			padding-left: 50px;
		}
		.lblTitle{
			font-size: 1.2em;
			border: none;
		}
		.rightPanel:hover .icon{
			opacity: 1;
		}
		.icon{
			width: 20px;
			height: 20px;
			margin-left: 20px;
			opacity: 0;
			cursor: pointer;
		}
		.lblItemNo{
			position: absolute;
			top: 30px;
			right: -20px;
			width: 20px;
			background: #4086fa;
			z-index: 999;
			text-align: right;
			padding: 5px;
			color: #fff;
			-webkit-border-top-right-radius: 5px;
			-webkit-border-bottom-right-radius: 5px;
			-moz-border-radius-topright: 5px;
			-moz-border-radius-bottomright: 5px;
			border-top-right-radius: 5px;
			border-bottom-right-radius: 5px;
		}
		.footerPanel{
			background: #f5f5f5;
			color: #999;
			padding: 10px;
		}
		.btnTrash{
			width: 30px;
			height: 20px;
			opacity: 0.5;
			cursor: pointer;
			float: right;
			border-left: 1px solid #999;
			padding-left: 10px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panel}">
		
		<g:HTMLPanel addStyleNames="{res.huskycss.inline} {style.left}">
			<g:HTMLPanel addStyleNames="{style.leftItem}">
				<g:TextBox ui:field="txtPoints" addStyleNames="{style.txtPoints}"/>
				<g:Label text="Points"/>
			</g:HTMLPanel>
			<h:CircleImage addStyleNames="{style.circle}"/>
			<g:Label text="1" ui:field="lblItemNo" addStyleNames="{style.lblItemNo}"/>
		</g:HTMLPanel>
	
		<g:HTMLPanel addStyleNames="{res.huskycss.inline} {style.rightPanel}">
			<g:HTMLPanel ui:field="titlePanel" addStyleNames="{style.lblTitle} {res.huskycss.inline}"/>
			<g:Image ui:field="btnEditTitle" title="Edit" resource="{res.ic_edit}" addStyleNames="{res.huskycss.inline} {style.icon} {res.huskycss.transition}"/>
			<g:HTMLPanel ui:field="quizPanel">
				<g:HTMLPanel ui:field="multipleChoicePanel">
					<h:ChoiceItem text="Item 1" name="mChoice"/>
					<h:ChoiceItem text="Item 2" name="mChoice"/>
					<h:ChoiceItem text="Item 3" name="mChoice"/>
				</g:HTMLPanel>
			</g:HTMLPanel>
		</g:HTMLPanel>
		
		
		
		<g:HTMLPanel addStyleNames="{style.footerPanel}">
			<g:Label text="+Add Explanation" ui:field="lblAddExplanation" addStyleNames="{res.huskycss.inline}"/>
			<g:Image resource="{res.ic_trash}" title="Delete" ui:field="btnDelete" addStyleNames="{res.huskycss.inline} {style.btnTrash}"/>
		</g:HTMLPanel>
	
	</g:HTMLPanel>
</ui:UiBinder> 