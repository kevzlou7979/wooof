<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:h="urn:import:husky.wooof.com.client.ui">
	<ui:with field='res' type='husky.wooof.com.client.resources.HuskyResources' />
	<ui:style>
		.panel{
			background: #fff;
			width: 100%;
			padding: 10px;
			border: 1px solid #e9e9e9;
			border-radius: 5px;
			-webkit-border-radius: 5px;
			-moz-border-radius: 5px;
		}
		.circle{
			font-size: 0.4em;
		}
		.left{
			width: 80px;
			height: 80px;
			position: relative;
		}
		.leftItem{
			position: absolute;
			z-index: 999;
			width: 60px;
			height: 60px;
			text-align: center;
			background: #fff;
			left: 10px;
			top: 10px;
			border-radius: 100%;
			-moz-border-radius: 100%;
			-webkit-border-radius: 100%;
			overflow: hidden;
			color: #4086fa;
		}
		.txtPoints{
			width: 100%;
			padding: 0px;
			border: none;
			font-size: 2em;
			text-align: center;
			color: #4086fa;
		}
		.txtPoints:hover{
			background: #e9e9e9;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panel}">
		
		<g:HTMLPanel addStyleNames="{res.huskycss.inline} {style.left}">
			<g:HTMLPanel addStyleNames="{style.leftItem}">
				<g:TextBox ui:field="txtPoints" addStyleNames="{style.txtPoints}"/>
				<g:Label text="Points"/>
			</g:HTMLPanel>
			<h:CircleImage addStyleNames="{style.circle}"/>
		</g:HTMLPanel>
	
		<g:HTMLPanel addStyleNames="{res.huskycss.inline}">
			<g:Label text="Title" ui:field="lblTitle"/>
		</g:HTMLPanel>
		
		<g:HTMLPanel ui:field="questionPanel">
			<g:HTMLPanel ui:field="multipleChoicePanel">
				<h:ChoiceItem text="Item 1" name="mChoice"/>
				<h:ChoiceItem text="Item 2" name="mChoice"/>
				<h:ChoiceItem text="Item 3" name="mChoice"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
		
		<g:HTMLPanel>
			<g:Label ui:field="lblAddExplanation"/>
			
		</g:HTMLPanel>
	
	</g:HTMLPanel>
</ui:UiBinder> 