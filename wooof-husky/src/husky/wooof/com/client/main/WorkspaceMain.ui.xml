<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:h="urn:import:husky.wooof.com.client.ui">
	<ui:with field='res'
		type='husky.wooof.com.client.resources.HuskyResources' />

	<ui:style>
	.activeUsersPanel {
		font-size: 0.3em;
		border-bottom: 1px solid #e9e9e9;
		position: relative;
		padding-top: 20px;
	}
	
	.ic_avatar {
		position: absolute;
		top: -10px;
	}
	.mainPanel{
		width: 70%;
		height: 100%;
		margin-top: 50px;
		vertical-align: top;
	}	
	.lessonPanel{
		width: 20%;
		height: 100%;
		margin-top: 50px;
		vertical-align: top;
	}
	.previewPanel{
		width: 70%;
		height: 400px;
		background: #fff;
		margin: auto;
		border: 4px solid #e9e9e9;
		border-bottom: 30px solid #e9e9e9;
		transition: 1s all !important;
		-webkit-transition: 1s all !important;
		-moz-transition: 1s all !important;
	}
	.lessonItemCreate{
		opacity: 0.5 !important;
		font-size: 1.2em !important;
	}
	.btnAction{
		width: 20%;
		font-size: 0.9em;
		float: right;
	}
	.lblLessonTitle{
		font-size: 2em;
	}
	.lblLessonDesc{
		font-size: 1em;
		color: #555;
	}
	.basicInfoPanel{
		width: 70%;
		margin: auto;
		margin-bottom: 20px;
	}
	.icTitle{
		width: 80px;
		height: auto;
	}
	.lblLink{
		font-size: 0.9em;
		color: #4086fa;
		cursor: pointer;
	}
	.panel{
		height: 100%;
	}
	.materialPanel{
		height: 600px;
	}
	</ui:style>
	<g:HTMLPanel ui:field="panel" addStyleNames="{style.panel}">
		<g:HTMLPanel ui:field="activeUsersPanel" addStyleNames="{style.activeUsersPanel}" />

		<g:HTMLPanel ui:field="mainPanel" addStyleNames="{res.huskycss.inline} {style.mainPanel} {res.huskymobilecss.cardMainPanel}">
			<g:HTMLPanel ui:field="basicInfoPanel" addStyleNames="{style.basicInfoPanel} {res.huskymobilecss.basicInfoPanel}">
				<g:HTMLPanel addStyleNames="{res.huskycss.inline}"> 
					<g:Label ui:field="lblLessonTitle" addStyleNames="{style.lblLessonTitle}"/>
					<g:Label ui:field="lblLessonDescription" addStyleNames="{style.lblLessonDesc}"/>
					<g:Label ui:field="lblBrowseMaterial" text="Browse Material" addStyleNames="{style.lblLink}"/>
				</g:HTMLPanel>
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="materialPanel" addStyleNames="{style.previewPanel} {style.materialPanel} {res.huskymobilecss.materialPanel}"/>
			<g:HTMLPanel ui:field="lessonPreviewPanel" addStyleNames="{style.previewPanel} {res.huskymobilecss.previewPanel}"/>
		</g:HTMLPanel>

		<g:HTMLPanel ui:field="lessonPanel" addStyleNames="{res.huskycss.inline} {style.lessonPanel} {res.huskymobilecss.lessonPanel}">
			<h:LessonItem ui:field="createLesson" action="create" addStyleNames="{style.lessonItemCreate}"/> 
		</g:HTMLPanel>

	</g:HTMLPanel>
</ui:UiBinder> 