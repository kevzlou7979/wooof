<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:h="urn:import:husky.wooof.com.client.ui">
	<ui:with field='res'
		type='husky.wooof.com.client.resources.HuskyResources' />

	<ui:style>
	.activeUsersPanel {
		font-size: 0.3em;
		border-bottom: 1px solid #e9e9e9;
		position: relative;
		padding-top: 20px;
	}
	
	.ic_avatar {
		position: absolute;
		top: -10px;
	}
	.mainPanel{
		width: 70%;
		height: 100%;
		margin-top: 50px;
		vertical-align: top;
	}	
	.lessonPanel{
		width: 20%;
		height: 100%;
		margin-top: 50px;
		vertical-align: top;
	}
	.previewPanel{
		width: 70%;
		height: 400px;
		background: #fff;
		margin: auto;
		border: 4px solid #e9e9e9;
		border-bottom: 30px solid #e9e9e9;
	}
	</ui:style>
	<g:HTMLPanel ui:field="panel">
		<g:HTMLPanel ui:field="activeUsersPanel" addStyleNames="{style.activeUsersPanel}" />

		<g:HTMLPanel ui:field="mainPanel" addStyleNames="{res.huskycss.inline} {style.mainPanel}">
			<g:HTMLPanel addStyleNames="{style.previewPanel}"/>
		</g:HTMLPanel>

		<g:HTMLPanel ui:field="lessonPanel" addStyleNames="{res.huskycss.inline} {style.lessonPanel}">
			<h:LessonItem ui:field="createLesson" action="create"/> 
		</g:HTMLPanel>

	</g:HTMLPanel>
</ui:UiBinder> 