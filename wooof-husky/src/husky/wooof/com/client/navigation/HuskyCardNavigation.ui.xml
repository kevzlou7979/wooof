<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='res' type='husky.wooof.com.client.resources.HuskyResources' />
	<ui:style>
		.navItems{
			padding: 5px;
			height: 100%;
			background: #4086FA;
			width: 60px;
			text-align: center;
			float: left;
		}
		.navContent{
			width: 0px;
			height: 100%;
			background: #F1F6FF;
			transition: 0.5s all;
			-webkit-transition: 0.5s all;
			-moz-transition: 0.5s all;
			border-left: 2px solid #c4d0e5;
			float:left;
		}
		.navItem{
			margin-top: 50%;
			opacity: 0.5;
			cursor: pointer;
		}
		.navItem:hover{
			opacity: 1;	
		}
		.navCardInfo{
			margin-top: 300%:
		}
		.btnHideNav{
			background: #C4D0E5;
			padding: 5px 20px 5px 20px;
			color: #FFF;
			position: absolute;
			left: -6%;
			top: 2%;
			cursor: pointer;
		}
	</ui:style>
	<g:HTMLPanel >
		
		<g:HTMLPanel ui:field="navContent" addStyleNames="{style.navContent}" >
			<g:Label ui:field="btnHideNav" text=">" addStyleNames="{style.btnHideNav}"/>
		</g:HTMLPanel>
			
		<g:HTMLPanel ui:field="navMenu" addStyleNames="{style.navItems}">
			<g:Image ui:field="navCardInfo" resource="{res.ic_nav_info_white}" addStyleNames="{style.navItem} {style.navCardInfo}"/>
			<g:Image ui:field="navChat" resource="{res.ic_nav_chat_white}" addStyleNames="{style.navItem}"/>
			<g:Image ui:field="navAddUser" resource="{res.ic_nav_add_user_white}" addStyleNames="{style.navItem}"/>
			<g:Image ui:field="navNotification" resource="{res.ic_nav_notification}" addStyleNames="{style.navItem}"/> 
			<g:Image ui:field="navLeave" resource="{res.ic_nav_leave}" addStyleNames="{style.navItem}"/> 
		</g:HTMLPanel >
		
	</g:HTMLPanel>
</ui:UiBinder> 