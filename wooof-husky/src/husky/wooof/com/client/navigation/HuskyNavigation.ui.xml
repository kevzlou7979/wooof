<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:h="urn:import:husky.wooof.com.client.ui">
	<ui:with field='res' type='husky.wooof.com.client.resources.HuskyResources' />
	<ui:style>
		.menu_item{
			margin-top: 10%;
		}
		.menu{
			margin-top: 50%;
			margin-left: 20px;
		}
		.imgProfile{
			margin-top: 20px;
		}
	</ui:style>
	<g:HTMLPanel>
		<h:CircleImage ui:field="imgProfile" addStyleNames="{style.imgProfile}"/>
		
		<g:HTMLPanel ui:field="navMenu" addStyleNames="{style.menu}">
			<g:Label ui:field="navCards" text="Cards" addStyleNames="{res.huskycss.lblSimple} {style.menu_item}"/>
			<g:Label ui:field="navSettings" text="Settings" addStyleNames="{res.huskycss.lblSimple} {style.menu_item}"/>
			<g:Label ui:field="navAccount" text="Account" addStyleNames="{res.huskycss.lblSimple} {style.menu_item}"/>
			<g:Label ui:field="navLogout" text="Logout" addStyleNames="{res.huskycss.lblSimple} {style.menu_item}"/>
		</g:HTMLPanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 