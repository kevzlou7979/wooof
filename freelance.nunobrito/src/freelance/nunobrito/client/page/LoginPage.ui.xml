<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='res' type='freelance.nunobrito.client.resouces.DotClickResources' />
	<ui:style>
	.title{
		font-size: 3em;
		color: #fff;
		font-weight: bold;
	}
	.desc{
		font-size: 1.5em;
		color: rgb(255, 255, 255);
		font-style: italic;
		width: 500px;
		margin: auto;
	}
	.panel{
		text-align: center;
		overflow: hidden;
	}
	.fieldPanel{
		padding-top: 20%;
		width: 100%;
		height: 100%;
		background: rgba(0,0,0,0.2);
	}
	.btnLogin{
		width: 20%;
		background: #3b5998;
		margin-top: 50px;
	}
	</ui:style>
	<g:HTMLPanel addStyleNames="{res.dotclickcss.loginPanel} {style.panel}">
	    <g:HTMLPanel addStyleNames="{style.fieldPanel}">
	        <g:Label text="DotClick" addStyleNames="{style.title}"/>
			<g:Label text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy" addStyleNames="{style.desc}"/>
	   		<g:Button ui:field="btnFBLogin" text="Login with Facebook" addStyleNames="{res.dotclickcss.dotClickButtonBlue} {style.btnLogin}" />
		</g:HTMLPanel>
	</g:HTMLPanel>	
</ui:UiBinder> 