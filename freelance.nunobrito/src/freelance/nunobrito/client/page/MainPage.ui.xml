<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='res' type='freelance.nunobrito.client.resouces.DotClickResources' />
	<ui:style>
	.header{
		background: #3b5998;
		padding: 20px;
		color: #fff;
	}
	.logo{
		width: 19%;
		font-size: 2em;
		font-weight: bold;
	}
	.info{
		width: 80%;
		text-align: right;
		padding-right: 2%;
	}
	.lblEmail{
		cursor: pointer;
	}
	.imgProfilePic{
		width: 60px;
		height: auto;
	}
	.menu{
		opacity: 0.6;
		margin-right: 20px;
		position: relative;
	}
	.menu:hover{
		opacity: 1;
	}
	.lblNoPost{
		position: absolute;
		bottom: 0px;
		right: 0px;
		background: none repeat scroll 0% 0% red;
		border-radius: 100% 100% 100% 100%;
		-webkit-border-radius: 100% 100% 100% 100%;
		-moz-border-radius: 100% 100% 100% 100%;
		padding: 5px;
		height: auto;
		text-align: center;
		font-size: 0.6em;
		border: 2px solid #fff;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.header}">
		    <g:Label text="DotClick" addStyleNames="{res.dotclickcss.inline} {style.logo}"/>
		    <g:HTMLPanel addStyleNames="{res.dotclickcss.inline} {style.info}">
		        <g:HTMLPanel addStyleNames="{res.dotclickcss.inline} {style.menu}">
		        	<g:Image ui:field="imgBell" title="See Posts" resource="{res.ic_post}" addStyleNames="{res.dotclickcss.transition}"/>
		        	<g:Label ui:field="lblNoPost" text="1" addStyleNames="{style.lblNoPost}"/>
		        </g:HTMLPanel>
		        <g:Image ui:field="imgProfilePic" addStyleNames="{res.dotclickcss.inline} {style.imgProfilePic}"/>
		        <g:Label ui:field="lblEmail" addStyleNames="{res.dotclickcss.inline} {style.lblEmail}"/>
		   		<g:Image title="Logout" resource="{res.ic_logout}" ui:field="btnLogout" addStyleNames="{res.dotclickcss.inline} {res.dotclickcss.icon}"/>
		    </g:HTMLPanel>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="bodyPanel"/>
	</g:HTMLPanel>
</ui:UiBinder> 