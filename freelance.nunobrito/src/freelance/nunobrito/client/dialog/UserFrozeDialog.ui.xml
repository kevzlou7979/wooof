<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='res' type='freelance.nunobrito.client.resouces.DotClickResources' />
	<ui:style>
		.panel{
			-webkit-box-shadow: 1px 2px 5px 0px rgba(50, 50, 50, 0.37);
			-moz-box-shadow:    1px 2px 5px 0px rgba(50, 50, 50, 0.37);
			box-shadow:         1px 2px 5px 0px rgba(50, 50, 50, 0.37);
			font-size: 1.5em;
			color: #555;
			text-align: center;
			padding: 50px;
		}
		.link{
		 	color: #FFA500;
    		font-weight: bold;
    		cursor: pointer;
		}
	</ui:style>	
	<g:HTMLPanel addStyleNames="{style.panel}">
		<g:Image resource="{res.ic_lock}"/>
		<g:Label text="Sorry your account is temporarily locked"/>
		<g:HTMLPanel>
			<g:Label text="Please follow this " addStyleNames="{res.dotclickcss.inline}"/>
			<g:Label text=" link " ui:field="lblLink" addStyleNames="{res.dotclickcss.inline} {style.link}"/>
			<g:Label text="to unlocked your account" addStyleNames="{res.dotclickcss.inline}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 