<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='res' type='freelance.nunobrito.client.resouces.DotClickResources' />
	<ui:style>
	.title{
		font-size: 3em;
		color: #c8c8c8;
	}
	.desc{
		font-size: 1.5em;
		color: #c8c8c8;
	}
	.panel{
		width: 100%;
		text-align: center;
		margin-top: 20%;
		margin-left: 50%;
	}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panel}">
		<g:Image resource="{res.ic_info}"/>
		<g:Label ui:field="lblTitle" addStyleNames="{style.title}"/>
		<g:Label ui:field="lblDescription" addStyleNames="{style.desc}"/>
	</g:HTMLPanel>
</ui:UiBinder> 