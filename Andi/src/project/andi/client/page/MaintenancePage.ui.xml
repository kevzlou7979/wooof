<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:project.andi.client.material">
	<ui:with field='res' type='project.andi.client.resources.AndiResources' />
	<ui:style>
		.lblDesc{
			font-size: 2em;
			margin-top: -20px;
		}
		.lblTitle{
			font-size: 6em;
			font-weight: bold;
		}
		.panel{
			color: #a72773;
			text-align: center;
			overflow: hidden;
		}
		.panel img{
			max-width: 100%;
			height: auto;
		}
		.logoContainer{
			margin-top: 15%;
		}
		.fieldPanel{
			width: 310px !important;
			margin: auto;
			margin-top: 30px;
		}
		.lblCreateStory{
			font-size: 1.2em;
			cursor: pointer;
			transition: 1s all;
			-webkit-transition: 1s all;
			-moz-transition: 1s all;
		}
		.lblCreateStory:hover{
			opacity: 0.8;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{res.andicss.maintenancePanel} {style.panel}">
		<g:HTMLPanel ui:field="loginPanel" addStyleNames="{style.logoContainer}">
			<g:Image resource="{res.andi}" addStyleNames="{res.andimobilecss.logo}" ui:field="logo"/>
			<g:Label text="ANDI" addStyleNames="{style.lblTitle} {res.andimobilecss.frontTitle}"/>
			<g:Label text="SHARE YOUR LOVE STORY" addStyleNames="{style.lblDesc} {res.andimobilecss.frontDescription}"/>
			<g:HTMLPanel addStyleNames="{style.fieldPanel}"> 
				<m:RegularTextBox ui:field="txtCode" placeholder="Story Code"/>
				<m:MaterialButton ui:field="btnLoadStory"  text="Show Story"/>
				<g:Label ui:field="lblCreateStory" text="Create Story" addStyleNames="{style.lblCreateStory}"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 