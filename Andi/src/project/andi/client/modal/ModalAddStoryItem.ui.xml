<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:project.andi.client.material">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel ui:field="panel">
		<h4>Story Item</h4>
		<p>Fill up all the required fields</p>
		
		<m:MaterialTextBox ui:field="txtTitle" placeholder="Title"/>
		<m:MaterialTextBox ui:field="txtIntroduction" placeholder="Introduction"/>
		<m:MaterialTextBox ui:field="txtImageUrl" placeholder="Image URL"/>
		<m:MaterialTextArea ui:field="areaContent" placeholder="Content" />
		
		<m:MaterialTextBox ui:field="txtPlace" placeholder="Place"/>
		<m:MaterialDatePicker ui:field="dpCreationDate"/>
		
		<m:MaterialButton ui:field="btnCreateStoryItem" flat="Create"/>
		<m:MaterialButton ui:field="lblCancel" flat="Cancel"/>
		
	</g:HTMLPanel>
</ui:UiBinder> 