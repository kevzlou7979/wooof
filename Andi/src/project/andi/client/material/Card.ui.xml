<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:project.andi.client.material">
	<ui:with field='res' type='project.andi.client.resources.AndiResources' />
	<ui:style>
		.container{
			width: 70%;
			padding: 10px;
			border-box: box-sizing;
			-webkit-border-box: box-sizing;
			-moz-border-box: box-sizing;
			background: #fff;
			box-sizing: border-box;
			box-shadow: 0px 2px 5px 0 rgba(0, 0, 0, 0.26);
			margin: 8px;
			padding: 8px;
			border-radius: 2px;
			-moz-border-radius: 2px;
			-webkit-border-radius: 2px;
			margin-left: 10%;
			position: relative;
		}
		.container img{
			width: 100%;
			height: auto;
		}
		.cardTitle{
			font-size: 2em;
		}
		.cardIntro{
			color: #999;
			border-bottom: 1px solid #e9e9e9;
			padding-bottom: 20px;
		}
		.cardDate{
			color: #999;
		}
		.cardBody{
			font-size: 1.2em;
			padding-top: 20px;
			padding-bottom: 20px;
		}
		.left, .container{
			vertical-align: top;
		}
		.left{
			margin-left: -30px;
			border-radius: 100%;
			-webkit-border-radius: 100%;
			-moz-border-radius: 100%;
			background: #e5e3e5;
			width: 60px;
			height: 60px;
			border: 3px solid #cfcfcf;
			color: #999;
			font-size: 1em;
			text-align: center;
			line-height: 50px;
		}
		.panel{
			padding-top: 50px;
			
		}
		.icon{
			width: 30px !important;	
		}
		.btnAction{
			font-size: 2em;
			position: absolute;
			top: 20px;
			right: 20px;
			z-index: 1;
			background: none repeat scroll 0% 0% rgb(255, 255, 255);
			border-radius: 100%;
			-moz-border-radius: 100%;
			-webkit-border-radius: 100%;
			width: 50px;
			height: 50px;
			text-align: center;
			opacity: 0.5;
			transition: 1s all;
			-webkit-transition: 1s all;
			-moz-transition: 1s all;
			cursor: pointer;
		}
		.btnAction:hover{
			opacity: 1;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panel}">
		
		<g:HTMLPanel addStyleNames="inline {style.left}">
			<g:Label ui:field="lblTest" text="1st"/>
		</g:HTMLPanel>
		
		<g:HTMLPanel addStyleNames="{style.container} inline">
			<m:MaterialImage ui:field="imgCard"  resource="{res.bg_andi}"/>
			<m:MaterialIcon ui:field="btnAction" icon="mdi-editor-mode-edit" fontSize="2" addStyleNames="{style.btnAction}"/>
			<g:Label ui:field="lblTitle" text="Lorem Ipsum" addStyleNames="{style.cardTitle}"/>
			<g:Label ui:field="lblIntroduction" text="Lorem Ipsum" addStyleNames="{style.cardIntro}"/>
			
			
			
			<g:Label ui:field="lblContent" text="Lorem Ipsum" addStyleNames="{style.cardBody}"/>
			<g:HTMLPanel>
				<g:Image resource="{res.ic_map}" addStyleNames="inline {style.icon}"/>
				<g:Label ui:field="lblPlace" text="Lorem Ipsum" addStyleNames="inline"/>
			</g:HTMLPanel>
			
			<g:HTMLPanel>
				<g:Image resource="{res.ic_time}" addStyleNames="inline {style.icon}"/>
				<g:Label ui:field="lblTime" text="Lorem Ipsum" addStyleNames="inline"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 