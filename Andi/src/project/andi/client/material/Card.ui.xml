<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='res' type='project.andi.client.resources.AndiResources' />
	<ui:style>
		.container{
			width: 70%;
			padding: 10px;
			border-box: box-sizing;
			-webkit-border-box: box-sizing;
			-moz-border-box: box-sizing;
			background: #fff;
			box-sizing: border-box;
			box-shadow: 0px 2px 5px 0 rgba(0, 0, 0, 0.26);
			margin: 8px;
			padding: 8px;
			border-radius: 2px;
			-moz-border-radius: 2px;
			-webkit-border-radius: 2px;
			margin-left: 10%;
		}
		.container img{
			width: 100%;
			height: auto;
		}
		.cardTitle{
			font-size: 2em;
		}
		.cardIntro{
			color: #999;
			border-bottom: 1px solid #e9e9e9;
			padding-bottom: 20px;
		}
		.cardDate{
			color: #999;
		}
		.cardBody{
			font-size: 1.2em;
			padding-top: 20px;
			padding-bottom: 20px;
		}
		.left, .container{
			vertical-align: top;
		}
		.left{
			margin-left: -30px;
			border-radius: 100%;
			-webkit-border-radius: 100%;
			-moz-border-radius: 100%;
			background: #e5e3e5;
			width: 60px;
			height: 60px;
			border: 3px solid #cfcfcf;
			color: #999;
			font-size: 1em;
			text-align: center;
			line-height: 50px;
		}
		.panel{
			padding-top: 50px;
		}
		.icon{
			width: 30px !important;	
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.panel}">
		
		<g:HTMLPanel addStyleNames="inline {style.left}">
			<g:Label text="1st"/>
		</g:HTMLPanel>
		
		<g:HTMLPanel addStyleNames="{style.container} inline">
			<g:Image resource="{res.bg_andi}"/>
			<g:Label text="1st day with Andi" addStyleNames="{style.cardTitle}"/>
			<g:Label text="Lorem Ipsum sadas" addStyleNames="{style.cardIntro}"/>
			
			
			
			<g:Label text="The titles of Washed Out's breakthrough song and the first single from Paracosm share the two most important words in Ernest Greene's musical language: feel it. It's a simple request, as well..." addStyleNames="{style.cardBody}"/>
			<g:HTMLPanel>
				<g:Image resource="{res.ic_map}" addStyleNames="inline {style.icon}"/>
				<g:Label text="January 1 2014" addStyleNames="inline"/>
			</g:HTMLPanel>
			
			<g:HTMLPanel>
				<g:Image resource="{res.ic_time}" addStyleNames="inline {style.icon}"/>
				<g:Label text="January 1 2014" addStyleNames="inline"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 