<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='res' type='project.andi.client.resources.AndiResources' />
	<ui:style>
		.banner{
			width: 100%;
			background: #a72773;
			color: #fff;
			font-size: 1.5em;
			text-align: center;
			margin-top: 60px;
		}
		.imgProfile{
			width: 50px;
			height: 50px;
			background: white;
			border-radius: 100%;
			padding: 5px;
		}
		.item{
			padding: 20px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.banner}">
		<g:HTMLPanel addStyleNames="inline {style.item}">
			<g:Image ui:field="imgMan" resource="{res.avatar_man}" addStyleNames="{style.imgProfile}"/>
			<g:Label ui:field="lblMan" text="Lorem Ipsum"/>
		</g:HTMLPanel>
		
		<g:HTMLPanel  addStyleNames="inline {style.item}">
			<g:Image ui:field="imgWoman" resource="{res.avatar_woman}" addStyleNames="{style.imgProfile}"/>
			<g:Label ui:field="lblWoman" text="Lorem Ipsum"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 