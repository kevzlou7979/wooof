<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:project.andi.client.material">
	<ui:with field='res' type='project.andi.client.resources.AndiResources' />
	<ui:style>
		.header{
			width: 100%;
			background: #FFF;
			-webkit-box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);
			-moz-box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);
			box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);
			padding: 10px;
			box-sizing: border-box;
			-webkit-box-sizing: border-box;
			-moz-box-sizing: border-box;
			color: #a72773;
			font-size: 2em;
			position: fixed;
			height: 60px;
			top: 0px;
			z-index: 999;
		}
		.logo{
			width: 40px;
			height: auto;
		}
		.menuItem{
			cursor: pointer;
		}
		.btnLogin{
			width: 15%;
			font-size: 0.4em;
		}
		.header1{
			width: 20%;
		}
		.header2{
			width: 79%;
			text-align: right;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.header}">
		<g:HTMLPanel addStyleNames="inline {style.header1}">
			<g:Image ui:field="imgLogo" addStyleNames="inline {style.logo}"/>
			<g:Label ui:field="lblName" addStyleNames="inline"/>
		</g:HTMLPanel>
		<g:HTMLPanel addStyleNames="inline {style.header2}">
			<m:MaterialIcon ui:field="btnLogout" icon="mdi-action-settings-power" addStyleNames="{style.menuItem} {res.andicss.inline}"/>
			<m:MaterialButton ui:field="btnLogin" text="Login" addStyleNames="{style.btnLogin} {res.andicss.inline}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 