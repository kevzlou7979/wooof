<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.btn{
			width: 200px;
		}
		pre{
			padding-top: 20px;
			white-space: pre;
			background: #F3FBFF;
			border: solid 1px rgba(51, 51, 51, 0.12);
			font-size: 1.2em;
			padding-left: 10px;
		}
		.tag{
			color: #905;
		}
		.attr{
			color: #690;
		}
	</ui:style>
	<g:HTMLPanel>
	
		<m:MaterialTitle title="Circular" />
		<m:MaterialButton text="Show Loader" ui:field="btnShowLoader" color="blue" addStyleNames="{style.btn}"/>
		
		<pre>
MaterialLoader.showLoading(<span class="{style.tag}">true</span>);
		</pre>
		
		<m:MaterialTitle title="Linear" />
		<m:MaterialButton text="Show Progress" ui:field="btnShowProgress" color="blue" addStyleNames="{style.btn}"/>
		
		<pre>
MaterialLoader.showProgress(<span class="{style.tag}">true</span>);
		</pre>
	</g:HTMLPanel>
</ui:UiBinder> 