<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui">
	<ui:style>
		.button{
			vertical-align: top;
			margin-left: 20px;
		}
		pre{
			padding-top: 20px;
			white-space: pre;
			background: #F3FBFF;
			border: solid 1px rgba(51, 51, 51, 0.12);
			font-size: 1.2em;
			padding-left: 10px;
		}
		.tag{
			color: #905;
		}
		.attr{
			color: #690;
		}
	</ui:style>
	<g:HTMLPanel>
		
			<m:MaterialTitle title="Raised" description="The raised button is a standard button that signify actions and seek to give depth to a mostly flat page."/>
	
			<pre>
<span class="{style.tag}">&lt;m:MaterialButton</span> <span class="{style.attr}">text</span>="Button" <span class="{style.attr}">color</span>="blue" <span class="{style.attr}">display</span>="inline-block" <span class="{style.attr}">icon</span>="mdi-action-account-circle" <span class="{style.attr}">iconPosition</span>="left" <span class="{style.tag}">/></span>
			</pre>
		
			<m:MaterialButton text="Button" addStyleNames="{style.button}" color="blue" display="inline-block"/>
			<m:MaterialButton text="Button" addStyleNames="{style.button}" color="blue" display="inline-block" icon="mdi-action-account-circle"/>
			<m:MaterialButton text="Button" addStyleNames="{style.button}" color="blue" display="inline-block"	icon="mdi-action-account-circle" iconPosition="left"/>
		
			
		
		
			<m:MaterialTitle  title="Floating" description="The floating circular action button is meant for very important functions."/>
			
			<pre>
<span class="{style.tag}">&lt;m:MaterialButton</span> <span class="{style.attr}">type</span>="floating"  <span class="{style.attr}">color</span>="blue" <span class="{style.attr}">display</span>="inline-block" <span class="{style.attr}">icon</span>="mdi-action-account-circle" <span class="{style.tag}">/></span>
			</pre>
			
			<m:MaterialButton type="floating" size="large" text="+" addStyleNames="{style.button}" color="blue" display="inline-block"/>
			<m:MaterialButton type="floating" size="large" text="+" addStyleNames="{style.button}" color="blue" display="inline-block" icon="mdi-action-account-circle"/>
			
			<m:MaterialTitle title="Flat" description="Flat buttons are usually used within elements that already have depth like cards or modals."/>
			
			<pre>
<span class="{style.tag}">&lt;m:MaterialButton</span> <span class="{style.attr}">text</span>="Button" <span class="{style.attr}">type</span>="flat"  <span class="{style.tag}">/></span>
			</pre>
			
			<m:MaterialButton type="flat" text="Button"  addStyleNames="{style.button}" color="blue" display="inline-block"/>
		
	</g:HTMLPanel>
</ui:UiBinder> 