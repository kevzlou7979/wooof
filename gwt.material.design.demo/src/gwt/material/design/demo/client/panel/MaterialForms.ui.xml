<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui">
	<ui:style>
		pre{
			padding-top: 20px;
			white-space: pre;
			background: #F3FBFF;
			border: solid 1px rgba(51, 51, 51, 0.12);
			font-size: 1.2em;
			padding-left: 10px;
		}
		.tag{
			color: #905;
		}
		.attr{
			color: #690;
		}
	</ui:style>
	<g:HTMLPanel>
		
		<m:MaterialTitle title="TextBox" description="Text fields allow user input. The border should light up simply and clearly indicating which field the user is currently editing. "/>
		<m:MaterialTextBox placeholder="First Name" />
		<m:MaterialTextBox placeholder="Email" icon="mdi-action-account-circle" />
		
		<pre>
<span class="{style.tag}">&lt;m:MaterialTextBox</span> <span class="{style.attr}">placeholder</span>="First Name" <span class="{style.tag}">/></span>
<span class="{style.tag}">&lt;m:MaterialTextBox</span> <span class="{style.attr}">placeholder</span>="Email" <span class="{style.attr}">icon</span>="mdi-action-account-circle prefix" <span class="{style.tag}">/></span>
		</pre>
		
		<m:MaterialTitle title="Textarea" description="Textareas allow larger expandable user input. The border should light up simply and clearly indicating which field the user is currently editing. "/>
		<m:MaterialTextArea placeholder="Content" />
		
		<pre>
<span class="{style.tag}">&lt;m:MaterialTextArea</span> <span class="{style.attr}">placeholder</span>="Content" <span class="{style.tag}">/></span>
		</pre>
		
		<m:MaterialTitle title="ListBox" description="Select allows user input through specified options."/>
		<m:MaterialListBox >
			<item>Option 1</item>
			<item>Option 2</item>
			<item>Option 3</item>
		</m:MaterialListBox>
		
		<pre>
<span class="{style.tag}">&lt;m:MaterialListBox</span><span class="{style.tag}">></span>
	<span class="{style.tag}">&lt;item</span><span class="{style.tag}">></span>Option 1<span class="{style.tag}">&lt;item</span><span class="{style.tag}">></span>
	<span class="{style.tag}">&lt;item</span><span class="{style.tag}">></span>Option 2<span class="{style.tag}">&lt;item</span><span class="{style.tag}">></span>
	<span class="{style.tag}">&lt;item</span><span class="{style.tag}">></span>Option 3<span class="{style.tag}">&lt;item</span><span class="{style.tag}">></span>
<span class="{style.tag}">&lt;/m:MaterialListBox</span><span class="{style.tag}">></span>
		</pre>
		
		<m:MaterialTitle title="Radio Button" description="Radio Buttons are used when the user must make only one selection out of a group of items"/>
		<m:MaterialRadioButton name="gender" text="Male"/>
		<m:MaterialRadioButton name="gender" text="Female"/>
		
		<pre>
<span class="{style.tag}">&lt;m:MaterialRadioButton</span> <span class="{style.attr}">name</span>="gender" <span class="{style.attr}">text</span>="Male"<span class="{style.tag}">/></span>
<span class="{style.tag}">&lt;m:MaterialRadioButton</span> <span class="{style.attr}">name</span>="gender" <span class="{style.attr}">text</span>="Female"<span class="{style.tag}">/></span>
		</pre>
		
		<m:MaterialTitle title="Check Box" description="Checkboxes"/>
		<m:MaterialCheckBox text="Blue"/>
		<m:MaterialCheckBox text="Red"/>
		<m:MaterialCheckBox text="Green"/>
		
		<pre>
<span class="{style.tag}">&lt;m:MaterialCheckBox </span> <span class="{style.attr}">text</span>="Blue" <span class="{style.tag}">/></span>
<span class="{style.tag}">&lt;m:MaterialCheckBox </span> <span class="{style.attr}">text</span>="Red" <span class="{style.tag}">/></span>
<span class="{style.tag}">&lt;m:MaterialCheckBox </span> <span class="{style.attr}">text</span>="Green" <span class="{style.tag}">/></span>
		</pre>
		
		<m:MaterialTitle title="Date Picker" description="Material Datepicker"/>
		<m:MaterialDatePicker />
		
		<pre>
<span class="{style.tag}">&lt;m:MaterialDatePicker </span> <span class="{style.tag}">/></span>
		</pre>
		
	</g:HTMLPanel>
</ui:UiBinder> 